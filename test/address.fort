;; types

Int = /signed 64

;; primitives

load: /address a -> a ;; where a is a primitive type
store: (/address a, a) -> () ;; where a is a primitive type

+ = add
add: (a, a) -> a ;; where a is a number type

;; functions

inc: /address Int -> () = \p => store (p, load p + 1)

inc2: /address Int -> () = \p => /do
  inc p
  inc p