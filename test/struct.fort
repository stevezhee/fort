;; types
Char = /char
Int = /signed 32
Int64 = /signed 64

MyStruct = /Record
  x: Int
  y: Char
  z: Int64
  
MyStruct2 = /Record
  a: Int
  b: Int64

;; primitives

store: (/address a, a) -> ()
:= = store

output: a -> ()

;; code

get-y: MyStruct -> Char = \mystr => y mystr

bar: MyStruct -> MyStruct = \mystr => set-x (24, set-y (#"a", mystr))

qux: MyStruct = /record
  x = 42
  y = #"z"
  z = 0xff

qux2: MyStruct2 = /record
  a = 11
  b = 0xdeadbeef

foo: () -> () = \_ => /do
  output qux
  output qux2
  output (bar qux)
  output (get-y (bar qux))

