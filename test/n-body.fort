Double = /Floating 64
Bool = /Bool
Handle = /Address (/Unsigned 64)

Body = /Record
  x: Double
  y: Double
  z: Double
  vx: Double
  vy: Double
  vz: Double
  mass: Double

Bodies = /Address (/Array 5 Body)

